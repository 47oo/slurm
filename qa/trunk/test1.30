#!/usr/bin/expect
#
# Purpose: Test of SLURM functionality
#          Test of increasing job sizes
#
# Output:  "TEST: #.#" followed by "SUCCESS" if test was successful, OR
#          "FAILURE: ..." otherwise with an explanation of the failure, OR
#          anything else indicates a failure mode that must be investigated.
#
source ./globals

set test_id     "1.30"
set exit_code   0

print_header $test_id

#
# Spawn a srun immediate jobs with ever larger node counts
#
for {set node_cnt 1} {$node_cnt > 0} {set node_cnt [expr $node_cnt * 2]} {
	spawn $srun --immediate -N$node_cnt -c1 -t2 $bin_hostname
	expect {
		-re "Immediate execution impossible" {
			send_user "This error is expected, no worries\n"
			set node_cnt 0
			exp_continue
		}
		-re "Unable to allocate resources" {
			send_user "This error is expected, no worries\n"
			set node_cnt 0
			exp_continue
		}
		timeout {
			send_user "\nFAILURE: srun not responding\n"
			set exit_code   1
			kill_srun
			exp_continue
		}
		eof {
			wait
		}
	}
}

if {$exit_code == 0} {
	send_user "\nSUCCESS\n"
}
exit $exit_code
