#!/usr/bin/expect
#
# Purpose: Test of SLURM functionality
#          Test of BNR functions available via API library.
#
# Output:  "TEST: #.#" followed by "SUCCESS" if test was successful, OR
#          "FAILURE: ..." otherwise with an explanation of the failure, OR
#          anything else indicates a failure mode that must be investigated.
#
# NOTE: Add more tasks and nodes when BNR is fully implemented
#
source ./globals

set test_id          "7.2"
set exit_code        0
set file_prog_get    "test$test_id.prog"

print_header $test_id

#
# Delete left-over program and rebuild it.
#
exec $bin_rm -f $file_prog_get
exec $bin_cc ${file_prog_get}.c -g -pthread -o $file_prog_get -I${slurm_dir}/include -L${slurm_dir}/lib -lslurm
exec $bin_chmod 700 $file_prog_get

#
# Spawn a job to test BNR functionality
#
set timeout $max_job_delay
spawn $srun -t1 $file_prog_get
expect {
	-re "FAILURE" {
		set exit_code 1
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: srun not responding\n"
		kill_srun
		set exit_code 1
		exp_continue
	}
	eof {
		wait
	}
}

if {$exit_code == 0} {
	send_user "\nSUCCESS\n"
        exec $bin_rm -f $file_prog_get

}
exit $exit_code
