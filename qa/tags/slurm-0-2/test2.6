#!/usr/bin/expect
#
# Purpose: Test of SLURM functionality
#          Validate scontrol verbose and quite options.
#
# Output:  "TEST: #.#" followed by "SUCCESS" if test was successful, OR
#          "FAILURE: ..." otherwise with an explanation of the failure, OR
#          anything else indicates a failure mode that must be investigated.
#

source ./globals

set test_id     "2.6"
set exit_code   0

print_header $test_id

#
# Report all slurm partitions with verbose option
#
set matches       0
spawn $scontrol -v show partition
expect {
	-re "last_update_time" {
		incr matches
		exp_continue
	}
	-re "Default=YES" {
		incr matches
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: scontrol not responding\n"
		set exit_code 1
	}
	eof {
	}
}
if {$matches != 2} {
	send_user "\nFAILURE: scontrol show partition command failed\n"
	set exit_code 1
}

#
# Report all slurm partitions with quiet option
#
set matches       0
spawn $scontrol -q show partition
expect {
	-re "last_update_time" {
		send_user "\nFAILURE: quiet format failure\n:
		set exit_code 1
		exp_continue
	}
	-re "Default=YES" {
		incr matches
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: scontrol not responding\n"
		set exit_code 1
	}
	eof {
	}
}
if {$matches != 1} {
	send_user "\nFAILURE: scontrol show partition command failed\n"
	set exit_code 1
}

if {$exit_code == 0} {
	send_user "\nSUCCESS\n"
}
exit $exit_code
