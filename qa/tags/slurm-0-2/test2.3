#!/usr/bin/expect
#
# Purpose: Test of SLURM functionality
#          Validate scontrol ping command.
#
# Output:  "TEST: #.#" followed by "SUCCESS" if test was successful, OR
#          "FAILURE: ..." otherwise with an explanation of the failure, OR
#          anything else indicates a failure mode that must be investigated.
#
source ./globals

set test_id     "2.3"
set exit_code   0
set matches     0

print_header $test_id

#
# Report the slurm daemon status
#
 
spawn $scontrol ping  
expect {
	-re "Slurmctld.primary/backup" {
		incr matches
		exp_continue
	}
	-re "UP/UP" {
		incr matches
		exp_continue
	}
	-re "UP/DOWN" {
		incr matches
		exp_continue
	}
	-re "DOWN/UP" {
		incr matches
		exp_continue
	}
	-re "DOWN/DOWN" {
		incr matches
		exp_continue
	}
	timeout {
		send_user "\nFAILURE: scontrol not responding\n"
		set exit_code 1
	}
	eof {
	}
}

if {$matches != 2} {
	send_user "\nFAILURE: scontrol ping output error $matches\n"
	set exit_code 1
}
if {$exit_code == 0} {
	send_user "\nSUCCESS\n"
}
exit $exit_code
