# The following comments are to remind me how the automatic variables work:
# $@ - target
# $% - target member
# $< - First prerequisite
# $? - All (newer) prerequisites
# $^ - All prerequisites
# $+ - $^ but with repetitions
# $* - $* stem of pattern (for "foo.c" in %.c:%.o this would be "foo")
# 'info "GNU make"': "Using variables": "Automatic" also lists a few more.

REPORT = report
JSSPP  = jsspp

TEX = llnl.tex $(JSSPP).tex $(REPORT).tex

FIGDIR = figures
FIGS = $(FIGDIR)/arch.eps \
       $(FIGDIR)/slurm-arch.eps \
       $(FIGDIR)/entities.eps \
       $(FIGDIR)/connections.eps \
       $(FIGDIR)/interactive-job-init.eps \
       $(FIGDIR)/queued-job-init.eps \
       $(FIGDIR)/allocate-init.eps

PLOTS = $(FIGDIR)/times.eps 

BIB = project.bib

%.eps: %.dia
	dia --nosplash -e $@ $< 
%.eps: %.gpl
	gnuplot $<
%.eps: %.fig
	fig2dev -Lps $< $@
%.eps: %.obj
	tgif -print -eps $<
%.ps: %.dvi
	dvips -K -t letter -o $(@F) $(<F)
%.pdf: %.dvi
	dvipdf $< $@ 

all: $(JSSPP).ps $(REPORT).ps 

$(JSSPP).dvi: $(TEX) $(FIGS) $(PLOTS) $(BIB)
	latex $(JSSPP)

$(REPORT).dvi: $(TEX) $(FIGS) $(PLOTS) $(BIB)
	rm -f *.log *.aux *.blg *.bbl
	latex llnl
	bibtex llnl
	latex llnl
	latex llnl
	mv llnl.dvi $(REPORT).dvi

view: $(REPORT).ps
	ghostview $(REPORT) &

clean: 
	rm -f *~ *.dvi *.log *.aux $(JSSPP).ps $(REPORT).ps *.blg *.bbl #*.eps #*.gif *.ps
	      
